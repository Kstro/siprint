                                draw+='<div class="mcart-info">';
                                draw+='<span class="mcart-name">No items</span>';
                                draw+='</div>';
                                draw+='</div>';
                                draw+='</li>';
                                draw+='</ul>';
                                draw+='</div>';
                            }
                            
                            draw+='<div style="margin-top: 15px"></div>';
                            draw+='<div class="mcart-links buttons-set clearfix pull-right">';
                            draw+='<a href="{{ path('orden_show') }}" class="gbtn mcart-link-cart">View Cart</a>';
                            draw+='</div>';
                        
                            
                            draw+='</div>';
                            
                            document.getElementById('show-cart').innerHTML = draw;                        
