                <link rel="stylesheet" href="{{ asset('Resources/js/alertifyjs/css/themes/bootstrap.css') }}">
                
                
            {%- endblock %}
            {% block estilos -%}    
                {# Estilo de modal #}
                <style>
                    .ui-dialog{
                        border-radius: 0px;
                        border:0px;
                        padding:0px;
                    }
                    
                    .ui-dialog-titlebar{
                        border-radius: 0px;
                        border:0px;
                        background: #25BCE9;
                        padding:0px;
                    }
                    .ui-widget-overlay{
                        background:#111;
                    }
                    
                    
                    .ui-dialog-titlebar-close{
                        border:0px;
                        border-radius: 0px;
                        background: #FFF;
                        color:#000;
                        
                    }
                    
                    .ui-button.ui-widget.ui-state-default.ui-corner-all.ui-button-icon-only.ui-dialog-titlebar-close{
                        background:#FFF;
                        color:#FFF;
                        border:0px;
                    }
                    
                    .ui-widget-overlay{
                        background: #222222;
                        opacity: 0.9;
                    }
                </style>
                
            {%- endblock %}
        {%- endblock%}
    </head>
    <body>
        {% block body -%}  
            <header>
                <!--Top Header: Begin-->
                {% block topheader %}
                    {% include ':Layout:top_header.html.twig'%}
                {% endblock %}
                <!-- Barra de navegacion -->
                {% block navigation %}
                    {% include ':Layout:navigation.html.twig'%}
                {% endblock %}
            </header>
            <!--Main index : Begin-->
           <main id="main_category">
                {% block headerpage %}
                   {# {% include ':Layout:header_page.html.twig'%}#}
                    <section class="header-page">
                        <div class="container">
                            <div class="row">
                                <div class="col-sm-3 hidden-xs">
                                    <h1 class="mh-title">
                                    {% block section %}{% endblock %}       
                                    </h1>
                                </div>
                                <div class="breadcrumb-w col-sm-9"> 
                                    <span>You are here:</span>
                                    <ul class="breadcrumb">
                                        <li>
                                            <a href="/">Home</a>
                                        </li>
                                        <li>
                                            <span>{% block section2 %}{% endblock %}</span>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </section>
                {% endblock %}   
                {% block categories %}
                    <section class="category-w parten-bg">
                            <div class="container">
                                <div class="row">
                                    {% block sidebar %}
                                        {% include ':Layout:sidebar.html.twig'%}
                                            <div class="category-left-banner">
                                                <a href="#" title="category left banner">
                                                        {% block img_prom %}{% endblock %}
                                                </a>
                                            </div>
                                        </aside>
                                    {% endblock %}
                                    {% block contenido %}
                                        <section class="category grid col-sm-9 col-xs-12">
                                            
                                        </section>
                                    {% endblock %}    
                                </div>
                            </div>
                    </section>
                {% endblock %} 
                <div class="modal-center"></div>
                <div style="margin-bottom: 25px"></div>
            </main>
            <footer>
                {% block footer %}
                    {% include ':Layout:footer.html.twig'%}
                {% endblock %}
            </footer>
        {% endblock %}  
        
        
        
        {% block javascripts_step %}
            
            
            <script type="text/javascript" src="{{ asset('Resources/js/jquery/jquery-1.11.3.min.js') }}"></script> 
            <script type="text/javascript" src="{{ asset('Resources/js/bootstrap.min.js') }}"></script> 
            <script type="text/javascript" src="{{ asset('Resources/js/owl.carousel.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('Resources/js/Chart.js') }}"></script> 
            <script type="text/javascript" src="{{ asset('Resources/js/doughnutit.js') }}"></script> 
            <script type="text/javascript" src="{{ asset('Resources/js/slideshow/jquery.themepunch.revolution.js') }}"></script>   
            <script type="text/javascript" src="{{ asset('Resources/js/slideshow/jquery.themepunch.plugins.min.js') }}"></script>  
            <script type="text/javascript" src="{{ asset('Resources/js/theme-home.js') }}"></script>  
            
            <script type="text/javascript" src="{{ asset('Resources/js/jquery-ui-1.10.4.custom.js') }}"></script>  
            
            <script type="text/javascript" src="{{ asset('Resources/wrapkit/scripts/dataTables.bootstrap.js') }}"></script>
            <script type="text/javascript" src="{{ asset('Resources/wrapkit/scripts/dataTables.tableTools.js') }}"></script>
            <script type="text/javascript" src="{{ asset('Resources/bValidator-0.73/jquery.bvalidator.js')}}"></script>
            <script type="text/javascript" src="{{ asset('Resources/bValidator-0.73/bvalidator.lang.es.js')}}" ></script>
            <script type="text/javascript" src="{{ asset('Resources/jquery-ui/jquery-ui.js') }}"></script>
