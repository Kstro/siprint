<html lang="es">
    <head>
        {%block head -%} 
            {% block meta -%}
                <meta charset="utf-8">
                <meta http-equiv="X-UA-Compatible" content="IE=edge">
                <meta name="viewport" content="width=device-width, initial-scale=1">
            {% endblock%}
            
            {% block title -%}<title>{% block titlename -%} .::: Expressions | Printing & Graphics :::. {% endblock %}</title>{% endblock %}

            <!-- Declaracion de Archivo de Bootstrap -->	
            {% block css -%}    
                <link rel="stylesheet" type="text/css" href="{{ asset('Resources/css/style-main.css') }}"> 
                
                <link href='http://fonts.googleapis.com/css?family=Roboto:500,300,700,400' rel='stylesheet' type='text/css'>
                <link href='http://fonts.googleapis.com/css?family=Roboto+Condensed' rel='stylesheet' type='text/css'>
               {# <link rel="stylesheet" href="/resources/demos/style.css">#}
                <link rel="stylesheet" type="text/css" href="{{ asset('Resources/jquery-ui/jquery-ui.css') }}"> 
                <link rel="stylesheet" type="text/css" href="{{ asset('Resources/jquery-ui/jquery-ui.theme.css') }}"> 
                
                <link rel="stylesheet" href="{{ asset('Resources/jquery-ui/jquery-ui.css') }}">
                
{#                <link rel="stylesheet" href="/resources/demos/style.css">#}
