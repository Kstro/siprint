        {#                    <td><a href="{{ path('categoria_show', { 'id': categorium.id }) }}">{{ categorium.id }}</a></td>#}
                            <td style="width: 150px;">{{ categorium.nombre }}</td>
                            <td>
                                {% set total = 0 %}
                                {% for atributo in categorias if atributo.categoria.id == categorium.id %}
                                    {% set total = total + 1 %}
                                {% endfor %}    

                                {% set key = 0 %}
