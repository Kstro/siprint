                                    <td style="width: 225px;">{{ tshirt.nombre }}</td>
                                    <td>{{ tshirt.categoria }}</td>
                                    {#<td>
                                        {% set total = 0 %}
                                        {% for atributo in atributos if atributo.categoria.id == tshirt.id %}
