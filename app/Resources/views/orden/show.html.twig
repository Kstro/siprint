{% extends ':Layout:myaccountdashboard.html.twig' %}

{% block section %}Shopping Cart{% endblock %}
{% block section2 %}Shopping Cart{% endblock %}
{% block titleAccount -%}Your shopping basket{% endblock %}

{% block contenido %}
    <div class="products-list category-product" style="margin-top: 30px">
        <ul>
            {% for product in products %}
                <li class="pro-item row">
                    <div class="product-image-action col-sm-4 col-xs-12">
                        <img src="{{ asset('Photos/promotions/')}}{{ product.categoria.imagen }}" alt="{{ product.categoria.nombre }}">
                    </div>
                    <div class="product-info col-sm-8 col-xs-12">
                        <div class="pro-name-rate clearfix">
                            <h3 class="product-name">
                                {{ product.categoria }}
                            </h3>
                        </div>
                        <div class="price-box">
                            <span class="normal-price">$ {{ product.monto | number_format(2, '.', ',') }}</span>
                        </div>
                        <div class="short-description">
                            <p class="visible-md visible-lg">
                                Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et accusam et justo duo dolores et ea rebum.
                            </p>
                            <p class="visible-sm">
                                Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt...
                            </p>
                        </div>
                        
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
