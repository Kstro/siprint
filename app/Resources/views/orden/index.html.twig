    <script src="http://code.jquery.com/jquery-1.11.3.js"></script>     
    <script src="{{ asset('Resources/js/alertifyjs/alertify.js') }}"></script>
    <script>
        $(document).ready(function () {

            $(".idpago").on("click",function(){
                var href = $(this).attr('href');
                //alert (href);
                //window.open(href,'_blank');
                window.location = href;
                return false;
            });  
        });
    </script>    
    <script>
        
        $(document).ready(function(){      
            {% if mensaje == 0 %}
            
            {% endif %}
            
            
            alertify.defaults = {
                // dialogs defaults
                modal:true,
                basic:false,
                frameless:false,
                movable:true,
                moveBounded:false,
                resizable:true,
                closable:true,
                closableByDimmer:true,
                maximizable:true,
                startMaximized:false,
                pinnable:true,
                pinned:true,
                padding: true,
                overflow:true,
                maintainFocus:true,
                transition:'fade',
                autoReset:true,

                // notifier defaults


                // language resources 
                glossary:{
                    // dialogs default title
                    title:'...',
                    // ok button text
                    ok: 'OK',
                    // cancel button text
                    cancel: 'Cancel'            
                },

                // theme settings
                theme:{
                    // class name attached to prompt dialog input textbox.
                    input:'ajs-input',
                    // class name attached to ok button
                    ok:'ajs-ok',
                    // class name attached to cancel button 
                    cancel:'ajs-cancel'
                }
            };
            {% if mensaje == 0 %}
                alertify.alert('Transaccion exitosa');
            {% endif %}
            

            $(document).on("click",'#cnOrder',function(){
                var orderId= $(this).children().attr('id');
                //alert(orderId);

                alertify.confirm('Cancelar orden?').set('onok', function(closeEvent){
                    
                    $.post( "{{path('admin_view_orders_estado_cambiar')}}", { id: orderId, idEstado: 'cn' }, function( det ) {
                        //alert();
                        if(det.flag==0){
                            //$('#'+orderId).parent().parent().parent().parent().remove();
                            alertify.alert("Orden cancelada");
                        }
                        else{
                            alertify.alert("Error, intente de nuevo");
                            
                        }
                    });
                    
                    //alertify.success('Ok');
                    
                }); 
            
                return false; 
                
            });
            
            
            
            
            $('.opciones').click(function(){
                    var id = $(this).val();
                    var url = Routing.generate('admin_reporte_invoice', {'id': id});
                    window.open(url,'_blank');
                
                
                });    
        });//Fin document ready        
    </script>
{% endblock %}


