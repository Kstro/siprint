{% extends 'base.html.twig' %}

{% block body %}
    <h1>Carrusel</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ carrusel.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ carrusel.nombre }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{% if carrusel.estado %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_carousel_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_carousel_edit', { 'id': carrusel.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
