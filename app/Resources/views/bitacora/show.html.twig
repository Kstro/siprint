{% extends 'base.html.twig' %}

{% block body %}
    <h1>Bitacora</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bitacora.id }}</td>
            </tr>
            <tr>
                <th>Accion</th>
                <td>{{ bitacora.accion }}</td>
            </tr>
            <tr>
                <th>Fechaaccion</th>
                <td>{% if bitacora.fechaAccion %}{{ bitacora.fechaAccion|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_bitacora_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_bitacora_edit', { 'id': bitacora.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
