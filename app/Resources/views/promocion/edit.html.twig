{% block body %}
{{ form_start(edit_form, {'action': path('admin_promocion_edit',{'id':promocion.id})}) }}
        {{ form_errors(edit_form) }}
         <div class="row" style="margin: 50px 0;">
            <div class="col-md-3 text-right" style="margin-bottom: 4px;">
                Name:
            </div>
            <div class="col-md-9" style="margin-bottom: 4px;">
                {{ form_widget(edit_form.nombre) }}
            </div>
        
            <div class="clearfix"></div>
            <div class="col-md-3 text-right">
                Percent:
            </div>
            <div class="col-md-9">
                {{ form_widget(edit_form.porcentaje) }}
            </div>
        
            <div class="clearfix"></div>
            <div class="text-center">
                <div class="col-md-3 text-right" style="margin-bottom: 4px;">
                    Photo promotion:
                </div>   
                <div class="col-md-9 text-left" style=" margin-top: 10px;">
                    {{ form_widget(edit_form.file) }}
                </div>
            </div>
        </div>
        <input type="submit" value="Edit" style="margin-bottom: 10px;" class="btn-edit btn pull-right"/>
    {{ form_end(edit_form) }}
{% endblock %}
