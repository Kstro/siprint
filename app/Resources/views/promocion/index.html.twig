{% extends 'base.html.twig' %}

{% block body %}
    <h1>Promocion list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Porcentaje</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for promocion in promocions %}
            <tr>
                <td><a href="{{ path('admin_promocion_show', { 'id': promocion.id }) }}">{{ promocion.id }}</a></td>
                <td>{{ promocion.nombre }}</td>
                <td>{{ promocion.porcentaje }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_promocion_show', { 'id': promocion.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_promocion_edit', { 'id': promocion.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_promocion_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
