                        {% endblock %}#}
                        {#{{ form_start(form) }}
                        {{ form_widget(form) }}
                            <input type="submit" value="Create" />
                        {{ form_end(form) }}#}
                        
                        <form id="register-form" class="form-validate form-horizontal" method="post" action="{% block form_action1 %}{{ path("admin_usuario_register") }}{% endblock %}">
                            <p>First Name <span class="star">*</span></p>
                            <input name="firstname" id="firstname" class="firstname" type="text" >
                            <p>Last Name <span class="star">*</span></p>
                            <input name="lastname" id="lastname" class="lastname" type="text" >
                            <p>Create a username<span class="star">*</span></p>
                            <input name="username" id="username" class="user" type="text" > 
                            <p>Email Address <span class="star">*</span></p>
                            <input name="email" id="email" class="email" type="text" >
                            <p>Create a password  <span class="star">*</span></p>
                            <input name="password" id="password" class="pasword" type="password">
                            <p>confirm a password  <span class="star">*</span></p>
                            <input name="re-password" id="re-password" class="re-pasword" type="password" > 
                            <div>
                            
                            
                            <button type="submit" class="register">Register</button>
                            </div>
                        </form>
                            
                        
                    </div>    
                </div>

                <div class="col-md-6 col-sm-6 col-xs-12 right">
                    <div style="margin-bottom: 75px" id="login-users">
                        <h1>Login</h1>
                        <h4>Returning Customers</h4>
                        <p>If you have an account with us, please log in.</p>
                        <form id="login-form" class="form-validate form-horizontal" method="post" action="{% block form_action2 %}{{ path("admin_security_check") }}{% endblock %}">
                            {% block alert -%}
                                {% if error %}
                                    <div style="color:red;margin-bottom: 20px;">{{ error.message }}</div>
                                {% endif %}
                            {% endblock %}  
                            <p>Username <span class="star">*</span></p>
                            <input  type="text" value="{{ last_username }}" id="username" name="_username"  placeholder="Username">
                            <p>Password <span class="star">*</span></p>
                            <input class="pasword" type="password" id="password" name="_password" value="" placeholder="Password">
                            <p style=" font-size: 15px; color: #6E6E6E">Forgot your password?<a href="{{ path('admin_reset_passw') }}" > click here</a></p>
                            <button type="submit" class="login">Login</button>
                        </form>
                            
                    </div>
