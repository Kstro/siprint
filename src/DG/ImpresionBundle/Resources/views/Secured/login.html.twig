   <section class="pr-main" id="pr-register">	
        <div class="container">	
            <div class="col-md-9 col-sm-9 col-xs-12">		
                <div class="col-md-6 col-sm-6 col-xs-12 left">
                    <div id="register-users">
                        <h1>Create an Account</h1>
                        <h4>Personal Information</h4>
                        
                        {#{% block registerUser %}
